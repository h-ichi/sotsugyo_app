<div class="top-container">
  <div class="top-card">
    <div class="top-title">
      <h2>今日は何して遊ぼうかな？</h2>
    </div>

    <%= form_with url: suggestions_path, method: :post, local: true, html: { class: "suggestion-form" } do |f| %>
      
      <!-- 家族構成セクション -->
      <div class="form-section">
        <h3>家族構成</h3>
        <div class="form-group">
          <%= f.label :family_adults, "大人の人数" %>
          <%= f.number_field :family_adults, class: "form-control", min: 1, value: 2 %>
        </div>

        <div data-controller="children" class="form-group">
          <label for="family_children">子どもの人数</label>
          <input type="number" id="family_children" name="family_children" min="0" value="1"
                 class="form-control" data-children-target="count" data-action="input->children#update">
          <div data-children-target="fields" class="child-age-fields"></div>
        </div>
      </div>

      <!-- 興味・予算セクション -->
      <div class="form-section">
        <h3>希望条件</h3>
        <div class="form-group">
          <%= f.label :interests, "興味のあるジャンル" %>
          <div class="interests-container">
            <% ["アウトドア", "インドア", "学び", "癒し"].each do |interest| %>
              <div class="form-check form-check-inline">
                <%= f.check_box :interests, { multiple: true, class: "form-check-input" }, interest, nil %>
                <%= f.label :interests, interest, class: "form-check-label" %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :budget, "予算" %>
          <%= f.select :budget, ["0〜1000円", "1000〜5000円", "5000円以上"], {}, class: "form-select" %>
        </div>

        <div class="form-group">
          <%= f.label :area, "エリア" %>
          <%= f.text_field :area, placeholder: "例: 東京都渋谷区", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :weather, "天気" %>
          <%= f.select :weather, ["晴れ", "曇り", "雨"], {}, class: "form-select" %>
        </div>
      </div>

      <div class="button-center">
        <%= f.submit "遊び場を提案してもらう", class: "start-button" %>
      </div>

    <% end %>
  </div>
</div>

<style>
.top-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  padding: 20px;
  background: #fefefe;
}

.top-card {
  background-color: #ffffff;
  border-radius: 20px;
  box-shadow: 0 12px 30px rgba(0,0,0,0.08);
  padding: 40px;
  max-width: 520px;
  width: 100%;
  transition: transform 0.2s;
}

.top-card:hover {
  transform: translateY(-3px);
}

.top-title h2 {
  text-align: center;
  font-size: 2.2rem;
  margin-bottom: 30px;
  color: #333;
}

.form-section {
  margin-bottom: 30px;
  padding: 20px;
  background: #fafafa;
  border-radius: 12px;
  box-shadow: inset 0 0 6px rgba(0,0,0,0.03);
}

.form-section h3 {
  font-size: 1.2rem;
  font-weight: 700;
  margin-bottom: 16px;
  color: #555;
}

.form-group {
  margin-bottom: 16px;
}

.form-group label {
  font-weight: 600;
  display: block;
  margin-bottom: 6px;
}

.form-control, .form-select {
  width: 100%;
  padding: 10px 14px;
  border-radius: 10px;
  border: 1px solid #dcdcdc;
  font-size: 1rem;
  transition: all 0.2s;
}

.form-control:focus, .form-select:focus {
  outline: none;
  border-color: #ff6f6f;
  box-shadow: 0 0 6px rgba(255,111,111,0.3);
}

.interests-container .form-check {
  margin-right: 12px;
}

.button-center {
  text-align: center;
  margin-top: 30px;
}

.start-button {
  display: inline-block;
  background-color: #ff6f6f;
  color: white;
  padding: 14px 50px;
  border-radius: 28px;
  font-size: 18px;
  border: none;
  cursor: pointer;
  transition: background 0.3s, transform 0.2s;
}

.start-button:hover {
  background-color: #ff4a4a;
  transform: translateY(-2px);
}
</style>
