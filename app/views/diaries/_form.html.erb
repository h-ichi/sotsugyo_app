    <div class="diary-form-container">
     <%= form_with model: @diary, local: true, html: { multipart: true } do |f| %>
    <h2 class="page-title">
     <%= f.object.persisted? ? "日記編集" : "日記作成" %>
    </h2> 
    <div class="form-group">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: "form-control", placeholder: "日記のタイトルを入力" %>
    </div>

    <div class="form-group">
      <%= f.label :diary_date, "日付" %>
      <%= f.date_field :diary_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :content, "内容" %>
      <%= f.text_area :content, class: "form-control", rows: 6, placeholder: "日記の内容を入力" %>
    </div>

    <div class="form-group">
      <%= f.label :image, "画像アップロード" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <div class="form-actions">
     <%= f.submit(@diary.persisted? ? "更新" : "作成", class: "btn-submit") %>
     <%= link_to "戻る", diaries_path, class: "btn-cancel" %>
    </div>
  <% end %>
</div>

<style>
.page-title {
  text-align: center;
  font-size: 2rem;
  margin-bottom: 30px;
  color: #333;
}

.diary-form-container {
  max-width: 600px;
  margin: 0 auto;
  padding: 24px;
  background-color: #f9f9f9;
  border-radius: 12px;
  box-shadow: 2px 2px 12px rgba(0,0,0,0.1);
}

.form-group {
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  font-weight: bold;
  margin-bottom: 6px;
}

.form-control {
  width: 100%;
  padding: 10px 12px;
  border: 1px solid #ccc;
  border-radius: 8px;
  font-size: 1rem;
}

.form-control:focus {
  outline: none;
  border-color: #ff6f6f;
  box-shadow: 0 0 4px rgba(255,111,111,0.4);
}

.form-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20px;
}

.btn-submit {
  background-color: #ff6f6f;
  color: white;
  padding: 10px 36px;
  border-radius: 24px;
  font-size: 16px;
  text-decoration: none;
  border: none;
  cursor: pointer;
  transition: background 0.2s;
}

.btn-submit:hover {
  background-color: #ff4c4c;
}

.btn-cancel {
  background-color: #BFEFFF;
  color: black;
  padding: 10px 36px;
  border-radius: 24px;
  text-decoration: none;
  font-size: 16px;
  transition: background 0.2s;
}

.btn-cancel:hover {
  background-color: #90e0ff;
}

</style>
