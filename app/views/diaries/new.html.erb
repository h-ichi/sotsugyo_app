<h2>新規作成</h2>
<h2>日記作成</h2>

<%= form_with model: @diary, local: true do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :diary_date, "日付" %><br>
    <%= f.date_field :diary_date %>
  </div>

  <div>
    <%= f.label :content, "内容" %><br>
    <%= f.text_area :content %>
  </div>

  <div>
    <%= f.label :image, "画像アップロード" %><br>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.submit "作成" %>
  </div>
<% end %>
